{
    "version": "1.5.0-alpha",
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "declaration": false,
        "noImplicitAny": false,
        "removeComments": true,
        "noLib": false,
        "preserveConstEnums": true,
        "suppressImplicitAnyIndexErrors": true,
        "outDir": "./typescript_out"
    },
    "filesGlob": [
        "./phaser-2.4.8/typescript/phaser.d.ts",
        "./typescript/**/*.ts",
        "!./node_modules/**/*.ts"
    ],
    "files": [
        "./phaser-2.4.8/typescript/phaser.d.ts",
        "./typescript/Civilization.ts",
        "./typescript/Consoler.ts",
        "./typescript/DataHandler.ts",
        "./typescript/Graphics.ts",
        "./typescript/GraphicsHandler.ts",
        "./typescript/init.ts",
        "./typescript/Region.ts"
    ],
    "atom": {
        "rewriteTsconfig": true
    }
}
